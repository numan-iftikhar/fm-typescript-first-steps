{
    "compilerOptions": {
        "target": "ES6",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "composite": true
    },
    "include": [
        "./src/**/*",
        "./src/data/*.json"
    ],
    "exclude": [
        "node_modules",
        "./dist"
    ]
}